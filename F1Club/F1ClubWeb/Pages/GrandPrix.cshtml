@page
@model F1ClubWeb.Pages.GrandPrixModel
@{
}
<div class="container mt-5">
    <div class="row">
        @foreach (var grandPrix in Model.GrandPrixes)
        {
            <div class="col-md-4 mb-4">
                <div class="card d-flex flex-column h-100">
                    @if (grandPrix.DateOfGP > Model.Date)
                    {
                        <img src="~/lib/pics/ComingSoon.JPG" class="card-img-top" style="height: 300px; object-fit: cover;" alt="Grand Prix Image">
                    }
                    else
                    {
                        <img src="@* @grandPrix.ImageUrl *@" class="card-img-top" style="height: 300px; object-fit: cover;" alt="Grand Prix Image">
                    }
                    <div class="card-body flex-fill d-flex flex-column">
                        <h2 class="text-danger">@grandPrix.Circuit.Name @grandPrix.DateOfGP</h2>
                        <div class="mt-auto">
                            <a asp-page="/GPDetails" asp-route-gpid="@grandPrix.ID" class="btn btn-danger">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>