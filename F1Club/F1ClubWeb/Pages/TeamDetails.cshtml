@page
@model F1ClubWeb.Pages.TeamDetailsModel
@{
}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h2 class="text-danger">@Model.Team.Name</h2>
            <p><strong>Creation Date:</strong> @Model.Team.CreationDate.ToShortDateString()</p>

            <h3 class="mt-4 text-danger">Drivers</h3>
            <ul class="list-group">
                @foreach (var driver in Model.Drivers)
                {
                    <li class="list-group-item">@driver.FullName</li>
                }
            </ul>

            <p class="mt-4"><strong>Average Finish Position:</strong> @Model.TeamAveragePositions</p>
            <p class="mt-4"><strong>Championship titles:</strong> @Model.Wins</p>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <a asp-page="/Teams" class="btn btn-danger">Back to Teams</a>
        </div>
    </div>
</div>