@page
@model F1ClubWeb.Pages.CircuitDetailsModel
@{
}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h2 class="text-danger">@Model.Circuit.Name</h2>
            <p><strong>Number of Laps:</strong> @Model.Circuit.NumberOfLaps</p>
            <p><strong>Length:</strong> @Model.Circuit.Length km</p>
            <p><strong>Number of Corners:</strong> @Model.Circuit.NumberOfCorners</p>
            <p><strong>Road Score:</strong> @Model.Circuit.RoadScore</p>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <a asp-page="/Circuits" class="btn btn-danger">Back to Circuits</a>
        </div>
    </div>
</div>