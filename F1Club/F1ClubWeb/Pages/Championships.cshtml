@page
@model F1ClubWeb.Pages.ChampionshipsModel
@{
}
<div class="container mt-5">
    <div class="row">
        @foreach (var championship in Model.Championships)
        {
            <div class="col-md-4 mb-4">
                <div class="card d-flex flex-column h-100">
                    <img src="@* @driver.ImageUrl *@" class="card-img-top" style="height: 300px; object-fit: cover;" alt="Driver Image">
                    <div class="card-body flex-fill d-flex flex-column">
                        <h2 class="text-danger">@championship.Year</h2>
                        <div class="mt-auto">
                            <a asp-page="/ChampionshipDetails" asp-route-year="@championship.Year" class="btn btn-danger">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>